{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cat-launcher",
  "version": "0.14.0",
  "identifier": "com.munetmo.cat-launcher",
  "build": {
    "beforeDevCommand": "cargo test --manifest-path ./src-tauri/Cargo.toml && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cargo test --manifest-path ./src-tauri/Cargo.toml && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CatLauncher",
        "maximized": true,
        "backgroundColor": "#1a1a1a",
        "devtools": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": {
        "default-src": "'self' asset: http://asset.localhost",
        "script-src": "'self' https://us.i.posthog.com https://us-assets.i.posthog.com https://us.posthog.com https://app.posthog.com",
        "connect-src": "'self' asset: http://asset.localhost ipc: https://ipc.localhost http://ipc.localhost https://us.i.posthog.com https://us-assets.i.posthog.com https://us.posthog.com https://app.posthog.com",
        "worker-src": "'self' blob: data:",
        "img-src": "'self' asset: http://asset.localhost https://us.i.posthog.com https://us-assets.i.posthog.com https://us.posthog.com https://app.posthog.com",
        "style-src": "'self' 'unsafe-inline' https://us.i.posthog.com https://us-assets.i.posthog.com https://us.posthog.com https://app.posthog.com",
        "font-src": "'self' asset: http://asset.localhost https://us.i.posthog.com https://us-assets.i.posthog.com https://us.posthog.com https://app.posthog.com",
        "media-src": "'self' asset: http://asset.localhost https://us.i.posthog.com https://us-assets.i.posthog.com https://us.posthog.com https://app.posthog.com",
        "frame-ancestors": "'self' https://us.i.posthog.com https://us-assets.i.posthog.com https://us.posthog.com https://app.posthog.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "releases/*.json",
      "schemas/schema.sql",
      "content/*.json"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRDRjlBOThDNTgwQzE0RkEKUldUNkZBeFlqS241VEtGNHhJRm9MRHhpVUc4blF0Zm1vQXF0NzJxeXBaMFZXM1hWeDNSRFBZMWkK",
      "endpoints": [
        "https://raw.githubusercontent.com/abhi-kr-2100/CatLauncher/refs/heads/release/latest.json"
      ]
    }
  }
}
